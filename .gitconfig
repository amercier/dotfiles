[user]
  name = Alex Mercier
  email = pro.alexandre.mercier@gmail.com
[push]
  default = simple
[remote "origin"]
  fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
[color]
  ui = always
[color "branch"]
  current = green
  local = cyan
  remote = magenta
[color "diff"]
  meta = yellow
  frag = black bold
  new = green
  old = red
  whitespace = red black reverse
[color "status"]
  header = normal
  added = blue
  updated = green
  changed = red
  untracked = yellow
  unmerged = magenta
  branch = cyan
  nobranch = black bold
[core]
	excludesfile = ~/.profile.d/utils/gitignore
	editor = /usr/bin/vim
[alias]
  pr  = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
  pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
  l = "log --graph --pretty=format:'%C(red black)%H%Creset -%C(yellow black)%d%Creset %s %C(green black)(%cr) %C(blue black)<%an>%Creset'"
