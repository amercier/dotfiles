[alias]
	amend = commit --amend --no-edit
	clean-merged-branches = ! git merged-branches | xargs git branch -d
	cleanup = ! git checkout master && git pull && git clean-merged-branches
	clone-branch = clone -b
	commit-message = "!git_commit_message() { message="$@"; git commit -m \"$message\"; }; git_commit_message"
	current = symbolic-ref --short HEAD
	diff-cached = diff --cached
	graph = log --graph --pretty=friendly --color=always
	merged-branches = ! git branch --merged | egrep -v '^\\*'
	push-all = ! source $HOME/.profile.d/git && git_push_all
	push-upstream = "! git push --set-upstream \"$(git remote | head -n 1)\" \"$(git current)\""
	show-files = show --name-only
[commit]
	gpgsign = true
[core]
	excludesfile = /Users/amercier/.dotfiles/extra/.gitignore_global
[pretty]
	friendly = "\t%C(red)%h%C(reset) %C(dim)-%C(reset)%C(yellow)%d%C(reset) %s %C(dim green)(%cr) %C(dim blue)%an%C(reset)"
