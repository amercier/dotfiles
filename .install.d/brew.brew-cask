#!/usr/bin/env sh

brew install brew-cask \
&& brew tap caskroom/cask \
&& brew tap caskroom/versions \
&& for cask in \
  ccmenu \
  filezilla \
  firefox-nightly \
  google-chrome \
  java \
  mysqlworkbench \
  sublime-text3 \
  dashlane \
  firefox \
  flux \
  google-chrome-canary \
  moom \
  skype \
  vlc
do
  echo "========== $cask ==========" \
  && brew cask install "$cask" \
  || exit 1
done
