blue() {
  echo -e "${COLOR_BLUE}${*}${COLOR_RESET}"
}

cyan() {
  echo -e "${COLOR_CYAN}${*}${COLOR_RESET}"
}

cyan_light() {
  echo -e "${COLOR_CYAN_LIGHT}${*}${COLOR_RESET}"
}

green() {
  echo -e "${COLOR_GREEN}${*}${COLOR_RESET}"
}

red() {
  echo -e "${COLOR_RED}${*}${COLOR_RESET}"
}

red_light() {
